.logo{
    width: 26em;
    height : 10em;
}
a {
  cursor: pointer;
  color: white;
  text-decoration: none;
}

a:hover {
  opacity: 0.8;
}
.button {
  display: inline-flex;
  align-items: center;
  border-radius: 0.1em;
  font-size: 0.8em;
  margin: 0 1em;
  cursor: pointer;
  background-color: #1976d2;
  color: white;
  border: none;
}

.button:hover {
  opacity: 0.8;
  font-weight: normal;
}


.navbar{
    width: 100%;
    height: 2em;
    padding: 1em 4em;
    background-color: #1976d2;
    font-size: 1em;
    justify-content: space-between;
    align-items: center;
}

.icon{
    margin: 0 0.2em;
}

 

 