.main{
    width: 80%;
    margin-top: 2em;
}
table {
  font-family: 'Arial';
  width :90%;
  margin: 1em 0px;
  border-collapse: collapse;
  border: 1px solid #eee;
  border-bottom: 2px solid #00cccc;
  box-shadow: 0px 0px 20px rgba(0,0,0,0.10),
     0px 10px 20px rgba(0,0,0,0.05),
     0px 20px 20px rgba(0,0,0,0.05),
     0px 30px 20px rgba(0,0,0,0.05);
  th, td {
    color: #999;
    border: 1px solid #eee;
    padding: 0.5em 1em;
    border-collapse: collapse;
  }
  th {
    background: #009688;
    color: #fff;
    text-transform: uppercase;
    font-size: 1.5em;
    text-align: center;
    height: 2em;
    &.last {
      border-right: none;
    }
  }
  td{
    background: #61bf65;
    color: white;
    height: 1.5em;
  }
}
td:nth-child(1){
    width:0.5em;
    text-align: center;
}
td:nth-child(2){
    width:10em;
    text-align: center;
}
td:nth-child(3){
    text-align: left;
}
button {
  line-height: 1;
  display: inline-block;
  font-size: 1.2em;
  text-decoration: none;
  border-radius: 5px;
  color: #fff;
  padding: 0.5em;
  background-color: #3da241;
  width: 10em;
}
