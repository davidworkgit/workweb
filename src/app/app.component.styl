body{
    margin: 0;
}
.container{
        height : 5em;
    }
header {
    background: grey;
    nav {
        padding:2em;
        ul {
            list-style-type: none;
            margin: 0;
            padding: 0;

            li {
                float: left;
                width: 10em;

                a {
                    padding: 1em;
                    text-transform: uppercase;
                    font-size: 1.2em;

                    &:hover {
                        background: grey;
                    }
                }
                ul {
                    position: absolute;
                    display: none;
                    li {
                        float: none;
                        width: 10em;
                        a {
                            padding: 1.5em;
                            font-size: .8em;
                            text-align: left;
                            display: block;
                            background-color: grey;
                            &:hover {
                                background: grey;
                            }
                        }
                    }
                }
            }
            li:hover ul {
                display: block;
            }
        }
    }
}


 

 