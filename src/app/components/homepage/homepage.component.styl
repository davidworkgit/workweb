.main{
    width: 85%;
    font-size: 1em;
    mat-grid-list{
        mat-grid-tile{
            margin: 1em;
            a{
                width: 90%;
                height: 80%;
                border:0.3em solid #1976d2;
                border-radius:2em;
                text-decoration:none;
                text-align: center;
                box-shadow:0 0 0.1em #1976d2;
                 -moz-border-radius:0.1em;
                img{
                    width: 5em;
                    height: 5em;
                };
            };
        };
    };
}
a:hover {
    background-color: lightgrey;
    opacity: 0.8;
}